{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "outDir": "build",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2019",
    "module": "CommonJS",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "exclude": ["src/**/*.test.ts"],
  "include": ["src/**/*.ts", "src/**/*.json"]
}
